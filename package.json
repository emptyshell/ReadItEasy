{
  "name": "ReadItEasy",
  "version": "1.0.0",
  "description": "Master Electron Course Code",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "watch": "nodemon --exec electron --inspect=5858 .",
    "reset": "git reset --hard",
    "build": "electron-builder build",
    "release": "electron-builder build -p onTagOrDraft"
  },
  "repository": "https://github.com/emptyshell/ReadItEasy.git",
  "homepage": "https://github.com/emptyshell/ReadItEasy.git",
  "keywords": [
    "Electron",
    "Master Electron"
  ],
  "author": "Valentin Suruceanu",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^9.0.0",
    "electron-builder": "^22.11.4",
    "nodemon": "^2.0.0"
  },
  "dependencies": {
    "electron-updater": "^4.3.9",
    "electron-window-state": "^5.0.3"
  },
  "build": {
    "productName": "ReadItEasy",
    "appId": "men.suruceanu.readiteasy",
    "copyright": "Copyright Suruceanu.men",
    "publish": {
      "provider": "github"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "pkg"
    },
    "pkg": {
      "welcome": "./welcome.txt",
      "license": "./license.txt"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "guid": "b673a290-f9e5-4a41-b745-6d26371e3255"
    },
    "nsisWeb": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "linux": {
      "category": "Utility"
    }
  }
}
